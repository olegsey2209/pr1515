<Page x:Class="WpfForrat15.Pages.CategoryFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfForrat15.Pages"
      mc:Ignorable="d" 
        xmlns:validators="clr-namespace:WpfForrat15.ValidationRules"
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Категория"
      Background="{StaticResource PrimaryBackgroundColor}">

    <Grid>
        <StackPanel >
            <Button Content="Назад" Click="Back_Click" 
                        Style="{StaticResource BackButtonStyle}" 
                       />

            <TextBlock Text="Категория" 
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                           />


            <TextBox   materialDesign:HintAssist.Hint="Название категории" x:Name="NameeBox">
                <TextBox.Text>
                    <Binding Path="Name"
   UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validators:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                            <validators:MinLengthValidationRule ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <ItemsControl Style="{StaticResource ValidationErrorsStyle}"
ItemsSource="{Binding ElementName=NameeBox, Path=(Validation.Errors)}"/>

            <Button Content="Сохранить" Click="Save_Click"
                       Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>

    </Grid>
</Page>
