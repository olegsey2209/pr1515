<Page x:Class="WpfForrat15.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfForrat15.Pages"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
       xmlns:validators="clr-namespace:WpfForrat15.ValidationRules"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Вход"
      Background="{StaticResource PrimaryBackgroundColor}">

    <Grid>
        <StackPanel>
            <TextBlock Text="Магазин электроники" 
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                          />

            <TextBlock Text="Введите пин-код менеджера:"/>


            <TextBox x:Name="PinBox">
                <TextBox.Text>
                    <Binding Path="Pin"
                         UpdateSourceTrigger="PropertyChanged"
                         Mode="TwoWay">
                        <Binding.ValidationRules>
                            <validators:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                            <validators:MinLength4ValidationRule ValidatesOnTargetUpdated="True"/>

                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl Style="{StaticResource ValidationErrorsStyle}"
                      ItemsSource="{Binding ElementName=PinBox, Path=(Validation.Errors)}"/>


            <Button Content="Войти как менеджер" 
                        Click="LoginAsManager"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>

            <Button Content="Войти как посетитель" 
                        Click="LoginAsVisitor"
                        Style="{StaticResource MaterialDesignFlatButton}"
                       />
        </StackPanel>
    </Grid>
</Page>
