<Page x:Class="WpfForrat15.Pages.BrandListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfForrat15.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Бренды"
      Background="{StaticResource PrimaryBackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Назад" Click="Back_Click" 
                    Style="{StaticResource MaterialDesignFlatButton}"/>
            <Button Content="Добавить" Click="Add_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
            <Button Content="Удалить" Click="Delete_Click"
                    Style="{StaticResource DangerRaisedButton}"
                   />
        </StackPanel>

        <materialDesign:ColorZone Grid.Row="1" Mode="SecondaryMid">
            <ListView x:Name="BrandsListView"
                      MouseDoubleClick="Edit_Click"
                      SelectionChanged="BrandsListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </materialDesign:ColorZone>
    </Grid>
</Page>
