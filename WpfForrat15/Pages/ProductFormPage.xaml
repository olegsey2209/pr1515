<Page x:Class="WpfForrat15.Pages.ProductFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfForrat15.Pages"
      
       xmlns:validators="clr-namespace:WpfForrat15.ValidationRules"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Товар"
      Background="{StaticResource PrimaryBackgroundColor}">
    <Page.Resources>
        <local:ZeroToEmptyConverter x:Key="ZeroToEmptyConverter"/>
    </Page.Resources>
    <Grid>
        <Border >
            <StackPanel >
                <Button Content="Назад" Click="Back_Click" 
                        Style="{StaticResource BackButtonStyle}" 
                      />

                <TextBlock Text="Товар" 
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                       />

                <TextBox materialDesign:HintAssist.Hint="Название" x:Name="NameBox">
                    <TextBox.Text>
                        <Binding Path="Name"
                 UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                                <validators:MinLengthValidationRule ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <ItemsControl Style="{StaticResource ValidationErrorsStyle}"
              ItemsSource="{Binding ElementName=NameBox, Path=(Validation.Errors)}"/>


                <TextBox materialDesign:HintAssist.Hint="Описание" x:Name="OpisBox">
                    <TextBox.Text>
                        <Binding Path="Description"
   UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                                <validators:MinLengthValidationRule ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <ItemsControl Style="{StaticResource ValidationErrorsStyle}"
ItemsSource="{Binding ElementName=OpisBox, Path=(Validation.Errors)}"/>



                <TextBox materialDesign:HintAssist.Hint="Цена" x:Name="PriceBox">
                    <TextBox.Text>
                        <Binding Path="Price"
Converter="{StaticResource ZeroToEmptyConverter}"
   UpdateSourceTrigger="LostFocus">
                            <Binding.ValidationRules>
                                <validators:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                                <validators:DecimalValidationRule ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <ItemsControl Style="{StaticResource ValidationErrorsStyle}"
ItemsSource="{Binding ElementName=PriceBox, Path=(Validation.Errors)}"/>



                <TextBox materialDesign:HintAssist.Hint="Количество на складе" x:Name="StockBox">
                    <TextBox.Text>
                        <Binding Path="Stock"
                                 Converter="{StaticResource ZeroToEmptyConverter}"
   UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                                <validators:DigitsOnlyValidationRule ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <ItemsControl Style="{StaticResource ValidationErrorsStyle}"
ItemsSource="{Binding ElementName=StockBox, Path=(Validation.Errors)}"/>


                <TextBox materialDesign:HintAssist.Hint="Рейтинг" x:Name="RatingkBox" >
                    <TextBox.Text>
                        <Binding Path="Rating"
                                 Converter="{StaticResource ZeroToEmptyConverter}"
  
         UpdateSourceTrigger="LostFocus"
         >
                            <Binding.ValidationRules>
                                <validators:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                                <validators:DecimalValidationRule ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <ItemsControl Style="{StaticResource ValidationErrorsStyle}"
ItemsSource="{Binding ElementName=RatingkBox, Path=(Validation.Errors)}"/>

                <ComboBox x:Name="CategoryCombo" 
          materialDesign:HintAssist.Hint="Категория"
          DisplayMemberPath="Name" SelectedValuePath="Id">
                    <ComboBox.SelectedValue>
                        <Binding Path="CategoryId" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </ComboBox.SelectedValue>
                </ComboBox>

                <ItemsControl Style="{StaticResource ValidationErrorsStyle}"
              ItemsSource="{Binding ElementName=CategoryCombo, Path=(Validation.Errors)}"/>
                <ComboBox x:Name="BrandCombo" 
          materialDesign:HintAssist.Hint="Бренд"
          DisplayMemberPath="Name" SelectedValuePath="Id">
                    <ComboBox.SelectedValue>
                        <Binding Path="BrandId" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </ComboBox.SelectedValue>
                </ComboBox>

                <ItemsControl Style="{StaticResource ValidationErrorsStyle}"
              ItemsSource="{Binding ElementName=BrandCombo, Path=(Validation.Errors)}"/>
                <Button Content="Теги товара"
        Click="ManageTags_Click"
        Style="{StaticResource MaterialDesignFlatButton}"
        />
                <Button Content="Сохранить" Click="Save_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
